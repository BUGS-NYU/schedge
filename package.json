{
  "name": "schedge",
  "scripts": {
    "format": "prettier --no-color --write \"src/{pages/**/,components/**/,}*.{js,jsx,ts,tsx,module.css}\"",
    "dev": "next dev -p 9100",
    "export": "next build && next export -o src/main/resources/next",
    "lint": "next lint",
    "gradle": "node src/gradlew.js",
    "exec": "docker-compose exec",
    "build": "node src/gradlew.js composeBuild",
    "test": "node src/gradlew.js test",
    "start": "node src/gradlew.js composeUp",
    "stop": "docker-compose down",
    "compile": "node src/gradlew.js check",
    "schedge": "docker-compose exec schedge schedge",
    "psql": "docker-compose exec postgres psql --dbname=postgres --host=localhost --port=5432 --username=postgres"
  },
  "dependencies": {
    "axios": "1.1.3",
    "classnames": "2.3.1",
    "next": "12.0.9",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.34.14",
    "zod": "3.19.1",
    "zustand": "4.1.1"
  },
  "devDependencies": {
    "@types/node": "18.11.9",
    "@types/react": "17.0.2",
    "caniuse-lite": "1.0.30001431",
    "eslint": "8.23.1",
    "eslint-config-next": "12.3.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.31.8",
    "postcss": "8.4.19",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-preset-env": "7.0.1",
    "prettier": "2.7.1",
    "typescript": "4.8.4"
  },
  "browserslist": [
    "last 2 versions",
    "> 0.25%",
    "not dead",
    "not ie 11",
    "not op_mini all"
  ],
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false
  },
  "postcss": {
    "plugins": {
      "postcss-flexbugs-fixes": {},
      "postcss-preset-env": {
        "autoprefixer": {
          "flexbox": "no-2009"
        },
        "stage": 3,
        "features": {
          "nesting-rules": true,
          "custom-properties": false
        }
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "next/core-web-vitals",
      "plugin:jsx-a11y/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "@next/next/no-img-element": "off",
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "no-unused-vars": [
        "off",
        {
          "argsIgnorePattern": "^_",
          "destructuredArrayIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
}
